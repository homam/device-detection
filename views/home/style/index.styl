@import 'nib'

body
	font: 12px sans-serif;

header
	position: fixed
	top: 0; height: 60px; left: 0; right: 0;
	z-index: 2
	background-color: silver

	#chosen-methods
		width: 400px
.tree
	position: fixed
	top: 60px; right: 0; left: 0; bottom: 100px;
	overflow: auto
	z-index: 1

.stats
	position: fixed
	right: 0; left: 0; bottom: 0;
	height: 100px
	overflow: auto


.node circle
	fill: #fff;
	stroke: steelblue;
	stroke-width: 1.5px;

.node
	font-size: 10px;

.link
	fill: none;
	stroke: #ccc;
	stroke-width: 1.5px;


// treemap
rect
	fill: none;
	stroke: #fff;

ul.node-methods-stats
	margin: 3px 0 0 0; padding: 0;
	> li
		display: inline-block;
		width: 25%;
		margin: 0; padding: 0;
		list-style:none;
		outline: solid 1px silver
		> span
			display: inline-block;
			margin: 0 .2em 0 .2em;
			overflow: ellipsis
			width: 40px
			&.method 
				font-weight: bold
				width: 50px